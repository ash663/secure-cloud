{{#if user}}
  <div class="jumbotron col-md-6">
    <h3>Hack-free cloud</h3>
    <p>Beside is your profile information!</p>
  </div>
  <div class="jumbotron">
    <div class="panel-heading">
      <h4 class="panel-title">Profile Information</h4>
    </div>
    <div class="panel-body">
      <p>Username: {{user.username}}</p>
      <p>Avatar: <img src="{{user.avatar}}"/></p>
    </div>
  </div>
  <h5 class="panel-title">Upload</h4><br>
  <form method="post" action="/upload" enctype="multipart/form-data">
    <button class="btn btn-primary btn-sm" type="submit" name="upload">
      <input type="file" name="uploadFile"></input>
      <input type="submit" value="Upload"></input>
    </button>
  </form>
  <br><br>
  <div class="">
    <h5 class="panel-title">Files</h4>
      <ul>
        {{#array}}
          <form name="downloadFile" method="get" action="/downloadFile">
            <li class = "col-md-10">{{file}}</li>
            <button class="btn btn-primary btn-sm col-md-2" type="submit"  id="downloadFile">Download</button>
            <input type="hidden" name="download" value="{{file}}" />
            <!-- <button onclick="window.location = '/data/{{../user.username}}/files/{{file}}';" class="btn btn-primary btn-sm col-md-2"  id="downloadFile">Download</button> -->
            <!-- <button onclick="window.location = '/data/'+{{user.username}}+'/files/'+{{array.file}};" class="btn btn-primary btn-sm col-md-2"  id="downloadFile">Download</button> -->
          </form>
        {{/array}}
      </ul>
  </div>



{{else}}
  <div class="jumbotron">
    <h3>Hack-free cloud</h3>
    <p>Sign in and view your profile!</p>
    <p>
      <a href="/signin" class="btn btn-primary btn-lg" role="button">
        <span class="glyphicon glyphicon-user"></span>
        Sign in!
      </a>
    </p>
  </div>

{{/if}}
